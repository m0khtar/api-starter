html
  head    
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js')
    script(src='/static/app.js')
  body(ng-app="myApp" ng-controller="MainCtrl")
    nav.navbar.navbar-default.pull-right(ng-controller="NavCtrl")
      ul.nav.navbar-nav
        li(ng-show="isLoggedIn()")
          a {{ currentUser() }}
        li(ng-show="isLoggedIn()")
          a(href="" ng-click="logOut()") Log Out
        li(ng-hide="isLoggedIn()")
          a(href="/#/login") Log In
        li(ng-hide="isLoggedIn()") 
          a(href="/#/register") Register   
